        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "target": "ES2020",
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "dist",
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
}